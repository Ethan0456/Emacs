a:link {

color: #74269d;

font-weight: bold;

}

a:visited {

color: #909;

}

a:hover {

color: #c3f;

font-weight: bold;

}

/* Table of Contents navigation */

#toc {

background: #ebc6f9;

}

#toc a {

font-size: 0.75em;

}

